{
    "app-id": "me.hergert.Schemes",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "schemes",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "libpanel",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=disabled",
                "-Dintrospection=disabled",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpanel/1.6/libpanel-1.6.0.tar.xz",
                    "sha256": "b773494a3c69300345cd8e27027448d1189183026cc137802f886417c6ea30b6",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libpanel",
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "schemes",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddevelopment=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/chergert/schemes.git",
                    "commit": "ede21dae6b28591bd9312f98f5899968de1f7277"
                }
            ]
        }
    ]
}
