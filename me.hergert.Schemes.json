{
    "app-id": "me.hergert.Schemes",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "schemes",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig"
    ],
    "modules": [
        {
            "name": "libpanel",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=disabled",
                "-Dintrospection=disabled",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpanel/1.2/libpanel-1.2.0.tar.xz",
                    "sha256": "d9055bbbab9625f3f5ce6d1fd7132eb6ea34a6ba07a87e9938901fb8b31581e2",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libpanel",
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "schemes",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/chergert/schemes.git",
                    "tag": "0.2.0",
                    "commit": "8438d9e2a6522df942e71f0dd2666177ac2b15a8"
                }
            ]
        }
    ]
}
